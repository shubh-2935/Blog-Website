<%- include("partials/header"); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="text1">Title</label>
            <input class="form-control" type="text" id="text1" name="postTitle">
        </div>
        <div class="form-group">
            <label for="text2">Post</label>
            <textarea class="form-control" name="postBody" id="text2" cols="30" rows="10"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
<%- include("partials/footer"); -%>